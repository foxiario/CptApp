<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:layout_marginTop="@dimen/item_top_margin"
    android:longClickable="false"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_item"
        android:layout_width="@dimen/item_image_size"
        android:layout_height="@dimen/item_image_size"
        android:scaleType="centerCrop"
        android:src="@drawable/bird" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTextView_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_text_horizontal_margin"
            android:fontFamily="sans-serif-medium"
            android:text="@string/sample_text"
            android:textColor="@color/black"
            android:textSize="@dimen/item_title_text_size" />

        <TextView
            android:id="@+id/subtitleTextView_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_text_horizontal_margin"
            android:text="@string/sample_text" />
    </LinearLayout>
</LinearLayout>